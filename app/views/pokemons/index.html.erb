

<div class="container mt-5">
  <div class="row">
    <div class="col-sm-4 offset-sm-4">
      <h3> Upload a new pokemon </h3>
      <p> Our great service will enrich the pokemon for you, it just takes a bit</p>
      <%= simple_form_for(@pokemon) do |f| %>
       <%= f.input :name %>
       <%= f.submit :enter_pokemon %>
      <% end %>
    </div>
  </div>
</div>

<% @pokemons.each do |pokemon| %>
  <h4> <%= pokemon.name %> </h4>
<% end %>

